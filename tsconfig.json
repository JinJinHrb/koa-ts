{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "target": "es2020",
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "app/typings"],
    "baseUrl": ".",
    "paths": {
      "configs/*": ["./configs/*"],
      "app": ["app"],
      "chrome-mac/*": ["./chrome-mac/*"]
    }
  },
  "compileOnSave": false,
  "include": ["app/**/*", "configs/**/*", "**/*.ts", "**/*.tsx"],
  "files": ["app.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "experimentalResolver": true
  }
}
